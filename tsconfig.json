{
    "compilerOptions": {
        "target": "ES2023",
        "module": "ES2022",
        "moduleResolution": "Node",
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    },
    "include": [
        "src/**/*",
        "rollup.config.ts"
    ]
}